<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewresturantdetailsactivity">

    <ImageView
        android:id="@+id/mainimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondlayout"
        android:layout_below="@id/mainimage"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/view"
            android:background="@color/blueicon"/>

        <TextView
            android:id="@+id/rname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="hajkdhgjk adjgh"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/raddress"
            android:textSize="15dp"
            android:layout_below="@id/rname"
            android:layout_marginStart="30dp"/>


        <RelativeLayout
            android:id="@+id/darklayout"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/viewheaddarklayout"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/seekbarvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_marginTop="50dp"
                android:text="Original Capicaty:"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/vieworiginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:text="300"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t1"
                android:layout_marginTop="20dp"
                android:text="Covid Safe Capicaty:"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/covidtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vieworiginal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="200"
                android:textColor="@color/blueicon"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:layout_marginTop="20dp"
                android:text="Currently at:"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/viewcurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/covidtotal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="300"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_marginTop="20dp"
                android:text="Safety measures:"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:id="@+id/safty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/mask_foreground" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/sanitizer_foreground" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/social_foreground" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/clean_foreground" />


            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/safty"
                android:layout_centerHorizontal="true"
                android:background="@drawable/viewheadwhite"
                android:text="Book Table"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textColor="@color/blueicon"
                android:textSize="20dp"/>

        </RelativeLayout>



        <Button
            android:id="@+id/updatebtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@id/darklayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-25dp"
            android:background="@drawable/enterbtn"
            android:text="Live Capacity"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@id/mainimage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/viewresturanthead">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="Head Count"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/viewheadwhite">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/profile" />

            <TextView
                android:id="@+id/headcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="35"
                android:textColor="@color/black"
                android:textSize="24dp" />


        </RelativeLayout>

    </RelativeLayout>



    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/mainimage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-70dp"
        android:src="@color/white"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />


  </RelativeLayout>